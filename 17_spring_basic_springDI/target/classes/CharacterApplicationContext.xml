<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" 
	"https://www.springframework.org/dtd/spring-beans-2.0.dtd" >

<beans>
	<bean id="CharacterManager2" class="com.spring.di.CharacterManager2"></bean>
	<bean id="warrior" class="com.spring.di.Warrior"></bean>
	
	<!--
	 	property 태그의 name , value 속성을 이용하여 멤버변수의 값을 명시할 수 있다.
		name속성에는 setter를 작성한다. 변수와 같지만 setter가 없으면 인식하지 않는다.
	 -->
	
	<bean id="wizard" class="com.spring.di.Wizard">
		<property name="occupation" value="승급마법사2"/>
		<property name="level" value="30"/>
	</bean>
	
	<bean id="hunter1" class="com.spring.di.Hunter">
		<property name="occupation" value="승급 궁수2-1"/>
		<property name="level" value="30"/>
	</bean>

	<bean id="hunter2" class="com.spring.di.Hunter">
		<property name="occupation" value="승급 궁수2-2"/>
		<property name="level" value="30"/>
	</bean>
	
</beans>